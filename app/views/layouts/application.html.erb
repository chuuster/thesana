<!DOCTYPE html>
<html>
  <head>
    <title>Thesana</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.whiteLogoURL = "<%= image_url('logo_white.png') %>"
      window.greenLogoURL = "<%= image_url('logo_green_full.png') %>"
      window.blackLogoURL = "<%= image_url('logo_black_full.png') %>"
      window.chatURL = "<%= image_url('chat.svg') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

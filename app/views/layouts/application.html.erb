<!DOCTYPE html>
<html>
  <head>
    <title>Thesana</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.whiteLogoURL = "<%= image_url('logo_white.png') %>"
      window.greenLogoURL = "<%= image_url('logo_green_full.png') %>"
      window.blackLogoURL = "<%= image_url('logo_black_full.png') %>"
      window.homeIconURL = "<%= image_url('home.png') %>"
      window.homeIconHoverURL = "<%= image_url('home-hover.png') %>"
      window.inboxIconURL = "<%= image_url('inbox.png') %>"
      window.inboxIconHoverURL = "<%= image_url('inbox-hover.png') %>"
      window.portfolioIconURL = "<%= image_url('portfolio.png') %>"
      window.portfolioIconHoverURL = "<%= image_url('portfolio-hover.png') %>"
      window.myTasksIconURL = "<%= image_url('checked.png') %>"
      window.myTasksIconHoverURL = "<%= image_url('checked-hover.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
